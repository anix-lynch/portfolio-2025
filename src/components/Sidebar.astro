---
export interface SidebarProps {
  name?: string;
  tagline?: string;
  avatar?: string;
  about?: string;
  skills?: string[];
  social?: {
    linkedin?: string;
    github?: string;
    email?: string;
    resume?: string;
    twitter?: string;
    website?: string;
    portfolio?: string;
    huggingface?: string;
    kaggle?: string;
    medium?: string;
  };
}

const { 
  name = "Your Name",
  tagline = "Data Scientist ¬∑ ML Engineer\nLos Angeles, CA",
  avatar = "üë®‚Äçüíª",
  about = "Data scientist with multi-cloud experience. Specialized in machine learning, data visualization, and deploying scalable ML solutions across AWS, GCP, and Azure.",
  skills = ["Python", "Machine Learning", "AWS", "GCP", "Azure", "Tableau", "SQL", "Docker", "Kubernetes"],
  social = {}
} = Astro.props;
---

<aside class="sidebar">
  <div class="avatar">
    {avatar.startsWith('http') ? <img src={avatar} alt={name} /> : avatar}
  </div>
  <div>
    <div class="name">{name}</div>
    <div class="tagline" set:html={tagline.replace(/\n/g, '<br/>')}></div>
  </div>

  <!-- Social -->
  <div class="social">
    {social.linkedin && (
      <a href={social.linkedin} target="_blank" class="social-link">
        <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
          <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
        </svg>
        LinkedIn
      </a>
    )}
    {social.github && (
      <a href={social.github} target="_blank" class="social-link">
        <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
          <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
        </svg>
        GitHub
      </a>
    )}
    {social.twitter && (
      <a href={social.twitter} target="_blank" class="social-link">
        <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
          <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
        </svg>
        Twitter
      </a>
    )}
    {social.website && (
      <a href={social.website} target="_blank" class="social-link">
        <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
          <path d="M12 0C5.374 0 0 5.373 0 12s5.374 12 12 12 12-5.373 12-12S18.626 0 12 0zm5.568 13.8H15.02c-.238 2.09-.64 3.98-1.147 5.46-.916-.411-1.76-1.017-2.504-1.783 1.095-1.052 1.906-2.524 2.297-4.677h3.902zm-3.902-3.6h-3.902c-.391-2.153-1.202-3.625-2.297-4.677.744-.766 1.588-1.372 2.504-1.783.507 1.48.909 3.37 1.147 5.46h2.548zm-7.456 3.6c.238-2.09.64-3.98 1.147-5.46.916.411 1.76 1.017 2.504 1.783-1.095 1.052-1.906 2.524-2.297 4.677H6.21z"/>
        </svg>
        Website
      </a>
    )}
    {social.portfolio && (
      <a href={social.portfolio} target="_blank" class="social-link">
        <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
          <path d="M20 6h-2.18c.11-.31.18-.65.18-1a2.996 2.996 0 0 0-5.5-1.65l-.5.67-.5-.68C10.96 2.54 10.05 2 9 2 7.34 2 6 3.34 6 5c0 .35.07.69.18 1H4c-1.11 0-1.99.89-1.99 2L2 19c0 1.11.89 2 2 2h16c1.11 0 2-.89 2-2V8c0-1.11-.89-2-2-2zm-5-2c.55 0 1 .45 1 1s-.45 1-1 1-1-.45-1-1 .45-1 1-1zM9 4c.55 0 1 .45 1 1s-.45 1-1 1-1-.45-1-1 .45-1 1-1z"/>
        </svg>
        Portfolio
      </a>
    )}
    {social.huggingface && (
      <a href={social.huggingface} target="_blank" class="social-link">
        <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
          <path d="M12 0C5.373 0 0 5.373 0 12s5.373 12 12 12 12-5.373 12-12S18.627 0 12 0zm0 2c5.523 0 10 4.477 10 10s-4.477 10-10 10S2 17.523 2 12 6.477 2 12 2z"/>
          <circle cx="8.5" cy="9.5" r="1.5"/>
          <circle cx="15.5" cy="9.5" r="1.5"/>
          <path d="M8 14.5c0-1.5 1.5-3 4-3s4 1.5 4 3"/>
        </svg>
        HuggingFace
      </a>
    )}
    {social.kaggle && (
      <a href={social.kaggle} target="_blank" class="social-link">
        <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
          <path d="M18.825 23.859c-.022.092-.117.141-.281.141h-3.139c-.187 0-.351-.082-.492-.248l-5.178-6.589-1.448 1.374v5.111c0 .235-.117.352-.351.352H5.505c-.236 0-.354-.117-.354-.352V.353c0-.233.118-.353.354-.353h2.431c.234 0 .351.12.351.353v14.343l6.203-6.272c.165-.165.33-.246.495-.246h3.239c.144 0 .236.06.285.18.046.149.034.255-.036.315l-6.555 6.344 6.836 8.507c.095.104.117.208.07.311"/>
        </svg>
        Kaggle
      </a>
    )}
    {social.medium && (
      <a href={social.medium} target="_blank" class="social-link">
        <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
          <path d="M13.54 12a6.8 6.8 0 01-6.77 6.82A6.8 6.8 0 010 12a6.8 6.8 0 016.77-6.82A6.8 6.8 0 0113.54 12zM20.96 12c0 3.54-1.51 6.42-3.38 6.42-1.87 0-3.39-2.88-3.39-6.42s1.52-6.42 3.39-6.42 3.38 2.88 3.38 6.42M24 12c0 3.17-.53 5.75-1.19 5.75-.66 0-1.19-2.58-1.19-5.75s.53-5.75 1.19-5.75C23.47 6.25 24 8.83 24 12z"/>
        </svg>
        Medium
      </a>
    )}
    {social.email && (
      <a href={`mailto:${social.email}`} class="social-link">
        <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
          <path d="M20 4H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4l-8 5-8-5V6l8 5 8-5v2z"/>
        </svg>
        Email
      </a>
    )}
    {social.resume && (
      <a href={social.resume} download="resume.pdf" class="social-link resume-btn">
        <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
          <path d="M14,2H6A2,2 0 0,0 4,4V20A2,2 0 0,0 6,22H18A2,2 0 0,0 20,20V8L14,2M18,20H6V4H13V9H18V20Z"/>
        </svg>
        Download CV
      </a>
    )}
  </div>

  <!-- About -->
  <div class="about">
    <h3>About</h3>
    <p>{about}</p>
  </div>

  <!-- Skills -->
  <div>
    <strong>Skills</strong><br/>
    {skills.map(skill => <span class="skill-chip">{skill}</span>)}
  </div>
</aside>